@import "nib"
@import "normalize.styl"
@import "icons.styl"


gris = #787878
gris2 = #2B313B
rojo = #D52119 //#FF0302
azul = #008FD5
celeste = #63C4EE
verde = #8dc63f

html
body
	width 100%
	height 100%


body
	font-family 'Open Sans', sans-serif;
	font-size 80%
	font-weight 400
	line-height 30px
	color #707070
	overflow-y hidden
	

*
	box-sizing border-box

ul
	margin 0
	padding 0

a
	text-decoration none

h1
h2
h3
h4
h5
	font-weight 700
	margin-top 0


	


img
	max-width 100%
	height auto

.right
	right 0
.left
	left 0
.txt-center
	text-align center

.inner
	max-width 960px
	margin 0 auto
	position relative
	padding-left 1rem
	padding-right 1rem
.wrapper
	position relative
	min-height 100%
	position fixed
	width 130%
.home 
	.footer
		display none
		
.section-page
.page-template-default	
	overflow-y scroll

	.main 
		margin-top 50px
		
		&__player
			position absolute
			top 6em
			bottom auto
			background none
			width auto
			height auto
			&__container
				background none
			&:before
				background none
				height 0
				width 0	
		&__tunein
			display none
			
	.header
		&__menu
			visibility hidden
			&__link
			a	
				color white
				transition-delay 0
				
		&__btn-menu
		&__logo
			color gris
			opacity 1
			transition-delay 0.6s
			text-shadow none
			
		&__btn-home
			color gris
			transition-delay 0.6s
			text-shadow none
		&__contact
			color gris
			transition-delay 0.6s
			text-shadow none
		&--active
			background-color rojo
			
			.header__menu
				visibility visible
				&__link
				a	
					color white
					transition-delay 0.6
			.header__btn-menu
			.header__logo
				color white
				opacity 1 !important
				transition-delay 0
			
				
		&--fixed
			top 0
			.header__logo
				opacity 0
				transition-delay 0
				
@media all and (min-width: 480px)
	.page-template-default	
		.main 
			
			&__player
				top 8em
				bottom auto
				background none
				width auto
				height auto
				&__container
					background url('img/player.png') no-repeat;
				
			&__tunein
				display block				
.header
	position fixed
	top 30px
	left 0
	right 0
	background-color transparent
	height 0
	transition background 0.5s, height 0.2s
	transition-delay 0.6s
	z-index: 200
	
				
		
	&--active
		background rgba(0, 0, 0, .55)
		height 260px
		transition-delay 0s
		
		.header__menu
			visibility visible
			&__item
			.menu-item	
				opacity 1
				top 0
				//visibility visible
				
				&:nth-child(1)
					transition-delay 0s
				&:nth-child(2)
					transition-delay 0.1s
				&:nth-child(3)
					transition-delay 0.2s
				&:nth-child(4)
					transition-delay 0.3s
				&:nth-child(5)
					transition-delay 0.4s
				&:nth-child(6)
					transition-delay 0.5s
		
		.header__btn-menu
			i
				transform: rotate(180deg);
					
				&:before
					content: "\f00d";
		.header__contact
			color white
			transition-delay 0s
		.header__btn-home
			color white
			transition-delay 0s
					
	
	&__menu
		text-align center
		padding-top 4rem
		margin 0
		visibility hidden
		&__item
		.menu-item
			display block
			opacity 0
			//visibility hidden
			position relative
			transition opacity 0.5s, top 0.5s
			
			&:nth-child(1)
				transition-delay 0.5s
			&:nth-child(2)
				transition-delay 0.4s
			&:nth-child(3)
				transition-delay 0.3s
			&:nth-child(4)
				transition-delay 0.2s
			&:nth-child(5)
				transition-delay 0.1s
			&:nth-child(6)
				transition-delay 0.0s
		&__link
		a	
			color white
			display block
			padding .4rem 1rem
			border-bottom 2px solid transparent
			transition all .5s ease
			&:hover
				border-color white
	&__btn-menu
		position absolute
		left 0
		top .5rem
		left 1rem
		background-color transparent
		border 0
		font-size 2rem
		color white
		outline 0
		transition all .2s ease
		text-shadow 1px 1px 1px rgba(0, 0, 0, .75)
		
		&:hover
			transform scale(1.2)
			
		
		i 
			position relative
			transition all .2s ease-out
			
	

		
	&__logo
		display none
		position absolute
		right 3rem
		top 1rem
		color white
		transition all .5s ease
		font-weight 700
	&__btn-home
		color white
		position absolute
		left 4rem
		top .5rem
		text-shadow 1px 1px 1px rgba(0, 0, 0, .75)
	&__contact
		position absolute
		right 1rem
		top .5rem
		font-size 1rem
		color white
		text-shadow 1px 1px 1px rgba(0, 0, 0, .75)
		
@media all and (min-width: 1024px)
	body
		font-size 100%
	.header
		
		&__menu
			padding-top 0
			&__item
			.menu-item	
				display inline-block
		&--active
			//background rgba(255, 255, 255, .75)
			height 50px
		&__btn-menu
			display none
.twicker
	position absolute
	top 0
.main 
	
	&__slider
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		z-index 0
		&__slide
			width 100%
			background-size cover
			height 600px
			background-repeat: no-repeat
			background-position center center
			background-attachment fixed
	&__ads
		height 90px 
		overflow hidden
		position fixed
		bottom 0
		&__slide
			width 100%
			height 90px
			
	&__player
		position fixed
		bottom 11rem
		left -2rem
		z-index 100
		//background url('img/leaf.png') no-repeat
		width 450px
		height 90px
		/*&:before
			content ''
			background url('img/orquidea.png') no-repeat
			width 350px
			height 250px
			position absolute
			top -40px
			left -21px*/
			
		
		&__container
			position relative
			background url('img/player.png') no-repeat;
			width 340px
			height 52px
			margin-left 2rem
		#sm-button
			  position absolute
			  left 24px
			  top 10px
	&__tunein
		color white
		text-align left 
		margin-left	4rem
		position relative
		z-index 2
		a 
			display inline-block
			vertical-align middle
	

	&__header
		&__img
			width 100%
	&__info
		margin-top 1rem
		
		&__title
			text-align center
	.contact 
		position relative
		text-align center
	.contact-form
		input[type="text"],
		input[type="email"]
			height 30px
			width 100%
		textarea
			width 98%
	.twitter-timeline
		width 100% !important
@media all and (min-width: 480px)
	.main
		.contact-form
			input[type="text"],
			input[type="email"]
				width 360px
			textarea
				width 360px
			input[type="submit"]
				background-color verde
				border 0
				outline 0
				padding .5rem
				display inline-block
				color white			

	
		
@media all and (min-width: 1024px)	
	.main
		&__info
			margin-top 2.5rem 
		.contact 
			text-align left
		.contact-info
			position absolute
			right 6rem
			top 3rem
			
				

.floral
	display none
	position absolute
	right 0
	bottom 0
	width 355px
	height 246px
	background url('img/floral.png') no-repeat		
.social
	position fixed
	top 20%
	right 0
	display none
	&__link
		display block
		font-size 3rem
		color white
		background url(img/bg-leaf.png) no-repeat
		width 122px
		height 101px
		text-align center
		
		&:nth-child(2)
			background url('img/bg-leaf-2.png') no-repeat
		
		i 
			display inline-block
			line-height 101px
			margin-left 3rem
			text-shadow 1px 1px 2px rgba(0, 0, 0, .75)
@media all and (min-width: 640px)
	.floral
		display block
	.social 
		display block				
			
.footer
	margin-top 4rem
	margin-bottom 1rem
	text-align center
	&__copyright
		font-size .8rem